extends layout

block scripts
  script(src='/scripts/auth.js', defer)

block content
  section(class="w-full h-full flex flex-col")
    div(class="h-[20%] md:h-[10%] grid place-content-center w-full overflow-hidden")
      img(src="/images/absolutvision-82TpEld0_e4-unsplash.jpg", alt="", srcset="/images/absolutvision-82TpEld0_e4-unsplash-md.jpg 768w")

    div(class="flex-1")
      div(class="text-center py-4")
        h1(class="text-xl") Welcome back
        h2(class="text-lg") Sign in to manage your tasks

      form(class="w-5/6 md:w-4/6 mx-auto py-4 text-lg")
        span(id="form-feedback", class="text-red-600 transition-all text-base") &nbsp;

        div(class="flex flex-col gap-4")
          - const className = "group-hover:text-orange-500 peer-focus:text-orange-500 transition-all duration-500"
          - const inputStyles = "group-hover:placeholder:text-orange-500 group-focus:placeholder:text-orange-500 focus:placeholder:text-orange-500 outline-none flex-1 peer transition-all duration-500 form-input"

          - let props = { type: 'text', value: 'Username', placeholder: 'Enter username' }
          include partials/form-input

          - props = { type: 'password', value: 'Password', placeholder: 'Enter your password' }
          include partials/form-input

          div.flex.gap-4
            button(class="py-2 px-4 self-start border-2 border-black font-bold hover:rounded-lg bg-transparent hover:bg-orange-500 transition-all duration-500 flex items-center gap-2", type="submit", id="submit") Sign in

            button(class="py-2 px-4 self-start border-2 border-black font-bold hover:rounded-lg bg-transparent hover:bg-orange-500 transition-all duration-500 flex items-center gap-2", type="button", id="signup") Sign Up
